[user]
  name = Anh Nguyen
  email = khacanh@gmail.com
[alias]
  ci = commit
  co = checkout
  st = status --short
  lg = log --oneline --decorate -n 20
  wd = diff --word-diff
  wdc = diff --word-diff --cached
  dc = diff --cached
[github]
  user = phuongnd08
[color]
  diff = auto
  status = auto
[color "status"]
  changed = yellow
  added = green
  untracked = red
[diff]
  tool = kdiff3
[difftool "kdiff3"]
  cmd = kdiff3\"$LOCAL\" \"$REMOTE\"
[mergetool "kdiff3"]
  trustexitcode = false
  cmd = kdiff3 --merge --result=$MERGED $LOCAL $BASE $REMOTE
[merge]
  tool = kdiff3
[mergetool]
  keepBackup = false
[core]
  editor = /usr/bin/vim
